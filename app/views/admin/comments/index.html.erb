<div id="content">
        <header class="clearfix">
          <div class="col-xs-5 col-sm-3 col-md-3"><b>All commenters</b></div>
          <div class="col-xs-7 col-sm-9 col-md-9">
            <%=link_to "Create New Post", new_admin_post_path, class:"btn btn-xs btn-primary pull-right" %>
          </div>
        </header>

        <div class="content-inner">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Status</th>
                <th class="hidden-xs">Created</th>
              </tr>
            </thead>
            <tbody>
              <tr>
              <%@comments.each do |comment|%>  
                <td><%= comment.full_name%></td>
                <td><%= comment.email%></td>
                <td>
                  <%if comment.status?%>
                    <span class="label label-success">
                    <%= publish_status_conversion(comment.status)%>
                  <%else%>
                    <span class="label label-warning">
                    <%= publish_status_conversion(comment.status)%>
                  <%end%>    

                </td>
                <td><%=comment.created_at.strftime("%d/%m/%Y")%></td>
              </tr>
              <%end%>
            </tbody>
          </table>
        </div>
      </div>
      <%= will_paginate @comments %>

      <div class="row">
        <footer id="admin-footer" class="clearfix">
          <div class="pull-left"><b>Copyright </b>&copy; 2015</div>
          <div class="pull-right">admin system</div>
        </footer>
      </div>
    </div>
  </div>
</div>

