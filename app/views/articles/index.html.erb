<br/><br/>
<div class="container">
<!-- Stack the columns on mobile by making one full-width and the other half-width -->
<div class="row">
  <div class="col-md-8">
      <%@posts.order(id: :desc).each do |post|%>
        <%if post.is_publish? %>
        <div class="card mb-3">
          <%if post.thumbnail?%>
            <%= image_tag(post.thumbnail.url,:size => "737x300") %>
          <%end%>
          <div class="card-body">
            <%=link_to  article_path(post) do%>
              <h5 class="card-title"><%= post.title%></h5>
            <% end %>  
            <p class="card-text"><%= post.intro.html_safe %></p>
            <p class="card-text"><small class="text-muted"><%=time_ago(post.created_at)%></small></p>
          </div>
        </div>
        <% end%>
      <%end%>
  <%= will_paginate @posts , class: 'paginate'%>
  </div>
  <div class="col-12 col-md-4">
      <div class="card">
      <div class="card-body">
        <h5>About Blog</h5>
        <hr/>
        <p><%=@blog_setting.about %></p>
      </div>
    </div>
     <br/>
    <div class="card">
      <div class="card-body">
        <h5>Popular Posts</h5>
        <hr/>
        <%@posts.order(view_count: :desc).first(5).each do |post|%>
        <ul class="popular-posts">
          <li>
            <%=link_to article_path(post) do%>
              <%=post.title%>
            <%end%>
          </li>
        </ul>
        <%end%>
      </div>
    </div>
    
    <br/>
    <div class="card">
      <div class="card-body">
        <h5>Pr√©sentation</h5>
        <hr/>
      <div class="ratio ratio-16x9">
      <iframe width="560" height="315" src="https://www.youtube.com/embed/awo5bYavKrE" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      </div>
    </div>
  </div>
  </div>
</div>

